.md-edit-container
  .md-edit-header-row
    .md-edit-textarea-header
      = f.label :body, label_text, class: 'md-edit-header-text'
    .md-edit-preview-header
      = f.label 'プレビュー', class: 'md-edit-header-text'

  .md-edit-content-row
    .md-edit-textarea-cell
      - placeholder = '' if local_assigns[:placeholder].nil?
      = f.text_area :body, class: 'md-edit-textarea', placeholder: placeholder
    .md-edit-preview-cell
      .md-edit-preview
