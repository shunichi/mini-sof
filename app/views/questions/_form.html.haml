= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.hidden_field :user_id
  .field
    = f.label :title, 'タイトル'
    %br
    = f.text_field :title
  .edit-container
    .preview
      プレビュー
      .preview-text
    .field.edit
      = f.label :body, '本文'
      %br
      = f.text_area :body
  .actions
    = f.submit '保存'
